<h1 class="center">Sign in</h1>

<div class="row">
	<div class="span6 offset3 well well-large">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div>
		  	<%= f.label :email %>
		  	<%= f.email_field :email %>
		  </div>

		  <div>
		  	<%= f.label :password %>
		  	<%= f.password_field :password %>
		  </div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="checkbox">
		    	<%= f.check_box :remember_me %> 
		    	<%= f.label :remember_me, 'Remember me next time' %>
		    </div>
		  <% end -%>

	  	<div class="center">
	  		<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
	  	</div>
		<% end %>
		
		<div class="center"><%= render "devise/shared/links" %></div> 
	</div>
</div>

