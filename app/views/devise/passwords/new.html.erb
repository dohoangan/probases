<h1 class="center">Reset your password</h1>
<div class="row">
	<div class="span6 offset3 well well-large">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>
		  <small>Enter your e-mail address to have the password associated with that account reset. A new password will be e-mailed to the address.</small><br /><br />
		  <div><%= f.label :email %>
		  <%= f.email_field :email %></div><br />

		  <div class="center"><%= f.submit "Send me reset password instructions", class: "btn btn-large btn-primary" %></div>
		<% end %>

		<div class="center"> <%= render "devise/shared/links" %> </div>
	</div>
</div>
